{
    "private": true,
    "name": "js-modules",
    "devDependencies": {
        "@types/jest": "^22.2.3",
        "chalk": "^2.0.1",
        "jest": "^22.4.3",
        "lerna": "^2.11.0",
        "ts-jest": "^22.4.5"
    },
    "scripts": {
        "test": "jest",
        "build": "lerna run build"
    },
    "workspaces": [
        "packages/*"
    ],
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
